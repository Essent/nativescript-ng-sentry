{
	"compilerOptions": {
		"module": "esnext",
		"target": "es2017",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmitHelpers": true,
		"noEmitOnError": true,
		"skipLibCheck": true,
		"lib": [
			"es2017",
			"dom"
		],
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"app/*"
			],
			"@essent/nativescript-ng-sentry": [
				"../src/index.d.ts"
			]
		},
		"removeComments": false
	},
	"exclude": [
		"node_modules",
		"platforms",
		"../src/node_modules"
	],
	"include": [
		"../src",
		"**/*"
	]
}